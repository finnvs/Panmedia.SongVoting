@using Panmedia.SongVoting.Models;
@using Panmedia.SongVoting.ViewModels;
@model SongViewModel



@if (WorkContext.CurrentCulture == "da-DK")
{
    <h1>@Html.TitleForPage(T("Rediger Sang"))</h1>
    <text>
        Nominering til Årets Sang og Årets Co-write
        <br />
        <br />
        For at nominere en sang til en af disse priser kræves følgende:
        <br />
        <br />
        <ul>
            <li>Sangen skal være skrevet indenfor det sidste år.</li>
            <li>Sangen skal være skrevet/co-writet af nominatoren.</li>
            <li>Sangen skal være uploadet til SoundCloud eller YouTube.</li>
            <li>Nominatoren skal være web-bruger her på siden og betalende medlem af ÅSV (2017).</li>
            <li>Ved co-write skal de øvrige medsangskrivere oplyses.</li>
        </ul>
        <br />
        Vi lukker for nomineringer ved midnat d. 7.januar 2018. For mere info om priserne, klik <a href="http://sang-skriver.azurewebsites.net/da-dk/asv-prisen">HER.</a>
        <br />
        <br />
    </text>
}
else
{
    <h1>@Html.TitleForPage(T("Edit Song"))</h1>
    <text>
        Nomination for Song of the Year and Co-write of the Year
        <br />
        <br />
        In order to nominate a song for one of these awards, the following criteria must be met:
        <br />
        <br />
        <ul>
            <li>The song must be written within the last year.</li>
            <li>The song must be written/co-written by the nominator.</li>
            <li>The song must be uploaded to SoundCloud or YouTube.</li>
            <li>The nominator must be a site member and a paying member of ÅSV (2017).</li>
            <li>When nominating a co-write, the other authors must be credited.</li>
        </ul>
        <br />
        We close the polls for nominations by midnight, 7th. of  january 2018. For more info about the awards, click <a href="http://sang-skriver.azurewebsites.net/en-us/asv-awards">HERE.</a>
        <br />
        <br />
    </text>
}

<fieldset>
    <div id="editor-label">
        @Html.LabelFor(m => m.SelectedPollId, @T("Vælg en afstemning"))
    </div>
    <div id="editor-field">
        @Html.DropDownListFor(m => m.SelectedPollId, Model.MusicPolls, @T("Vælg en afstemning"))
        @Html.ValidationMessageFor(m => m.SelectedPollId)
    </div>
    <br />
    <br />
    <div id="editor-label">
        @Html.LabelFor(m => m.SongTitle, @T("Sangens titel"))
    </div>
    <div id="editor-field">
        @Html.TextBoxFor(m => m.SongTitle, new { size = "40" })
        @Html.ValidationMessageFor(m => m.SongTitle)
    </div>

    <div id="editor-label">
        @Html.LabelFor(m => m.SongAuthor, @T("Sangens forfatter(e)"))
    </div>
    <div id="editor-field">
        @Html.TextBoxFor(m => m.SongAuthor, new { size = "40" })
        @Html.ValidationMessageFor(m => m.SongAuthor)
    </div>

    <div id="editor-label">
        @Html.LabelFor(m => m.SongUrl, @T("Link til YouTube / Soundcloud"))
    </div>
    <div id="editor-field">
        @Html.TextBoxFor(m => m.SongUrl, new { size = "60" })
        @Html.ValidationMessageFor(m => m.SongUrl)
    </div>
    <br />
    <div>
        <text>
            <b>
                NB: et par tips omkring links til sange..
            </b>
        </text><br /><br />
        <text>
            <b>
                Hvis du linker til en youtube video, skal din url have 'embed' formen:
            </b>
        </text><br />
        <text>
            https://www.youtube.com/embed/svTU6THTeCQ
        </text><br /><br />
        <text>
            <b>
                ..eller din url skal have den korte standard form (gemmes som 'embed' link når du gemmer din sang):
            </b>
        </text><br />
        <text>
            https://www.youtube.com/watch?v=8s0Iv8s2Dcg
        </text><br /><br />
        <text>
            <b>
                Hvis du linker til et soundcloud track, skal din url have form som denne:
            </b>
        </text><br />
        <text>
            https://soundcloud.com/naomi-rose-2/buttercup
        </text><br /><br />
        <text>
            <b>
                ..eller som et embedded iframe link hentet fra Soundcloud's share knap, af formen:
            </b>
        </text><br />
        <text>
            iframe width="100%" ... src='https://w.soundcloud.com/player/?url=https' ...
        </text>
    </div>
    <br />
    <br />
    <div id="editor-label">
        @Html.LabelFor(m => m.SongDescription, @T("Kort beskrivelse af din sang - maks. 255 tegn!"))
    </div>
    <div id="editor-field">
        @Html.TextAreaFor(m => m.SongDescription, new { size = "60" })
        @Html.ValidationMessageFor(m => m.SongDescription)
    </div>

